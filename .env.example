# Environment Configuration
# Copy this to .env and configure your values

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME=AI Interview Platform
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000
WORKERS=2

# ============================================================================
# SECURITY
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change-this-to-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# DATABASE - PostgreSQL (runs in Docker)
# ============================================================================
POSTGRES_USER=interview_user
POSTGRES_PASSWORD=local_dev_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=interview_platform

# ============================================================================
# REDIS - Cache & Pub/Sub (runs in Docker)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# LIVEKIT - WebRTC Video (FREE tier: 10K mins/month)
# Sign up at https://cloud.livekit.io (no credit card)
# ============================================================================
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_WS_URL=wss://your-project.livekit.cloud

# ============================================================================
# STORAGE - MinIO (S3-compatible, runs in Docker)
# ============================================================================
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=interview-recordings
S3_REGION=us-east-1
USE_LOCAL_STORAGE=True

# ============================================================================
# AI SERVICES - FREE OPTIONS
# ============================================================================
# Option 1: OpenAI (optional, $5 free credit for new accounts)
OPENAI_API_KEY=

# Option 2: Ollama (FREE, local LLM - recommended)
USE_OLLAMA=True
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2

# Anthropic (optional, can leave empty)
ANTHROPIC_API_KEY=

# Whisper transcription (runs locally)
WHISPER_MODEL=tiny
USE_LOCAL_WHISPER=True

# ============================================================================
# CODE EXECUTION
# ============================================================================
# Judge0 Free Tier: 50 requests/day (optional)
JUDGE0_API_URL=https://judge0-ce.p.rapidapi.com
JUDGE0_API_KEY=
USE_RULE_BASED_CODE_ANALYSIS=True

CODE_EXECUTION_TIMEOUT=30

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
MAX_SESSION_DURATION_MINUTES=120
SESSION_RECORDING_ENABLED=True
